<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.main {
			padding: 4px;
		}
		
		.enterPanel {
			padding: 4px;
			border-style: solid;
			border-width: 1px;
			border-color: #d0e4f6;
		}
		
		.buttonPanel {
			padding-top: 10px;
			float: right;
		}
	</ui:style>
	<g:HTMLPanel styleName="{style.main}">
		<g:HTMLPanel styleName="{style.enterPanel}">
			<g:HTML>Enter new page title:</g:HTML>
			<g:TextBox ui:field="_txtTitle" width="350px"></g:TextBox>
		</g:HTMLPanel>
		<g:HTMLPanel styleName="{style.buttonPanel}">
			<g:Button ui:field="_butOk">OK</g:Button>
			<g:Button ui:field="_butCancel">Cancel</g:Button>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 